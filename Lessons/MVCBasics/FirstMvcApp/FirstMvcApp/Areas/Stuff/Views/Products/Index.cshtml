@{
}

@model List<Product>
<h2>Products</h2>

<a asp-action="Create">Create</a>

<div class="container">
    @foreach (var product in Model)
    {
        <div class="row m-2">
            <div class="col">Id: @product.Id</div>
            <div class="col">Name: @product.Name</div>
            <div class="col">Price: @product.Price</div>
            <div class="col">
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@product.Id">Edit</a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@product.Id">Delete</a>
            </div>
        </div>
    }
</div> 