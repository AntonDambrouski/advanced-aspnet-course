@model Organisation
@{
    ViewData["Title"] = "Редактирование " + Model.Name;
}
<div class="container">
    <h3>Редактирование</h3>
    <a asp-controller="Organisation" asp-action="DetailsOrganisation" asp-route-organisationId=@Model.OrganizationId 
            class="btn btn-warning">Назад</a>
    <form method="post" asp-action="EditOrganisation">
        <div class="row justify-content-md-center">
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="OrganizationId" class="control-label"></label>
                    <input asp-for="OrganizationId" class="form-control" type="number" min="1" />
                    <span asp-validation-for="OrganizationId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" type="text" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
        </div>
        <button class="btn btn-success" type="submit">Сохранить</button>
    </form>
</div>