<script>
    window.addEventListener('load', () => {
        LoadVacanciees();
        UpdateByInterval();
    });
	function UpdateByInterval() {

		window.progressID = setInterval(LoadVacanciees, 10000);
	}
	function LoadVacanciees() {
		$.ajax({
			method: 'POST',
			url: '@Url.Action("VacanciesList", "Vacancy")',
			data: { },
			dataType: 'html',
			success: function (result) {
				$('#vacancies').empty();
				$('#vacancies').append(result);
			}
		});
	}
</script>